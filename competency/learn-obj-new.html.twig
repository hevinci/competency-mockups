{% extends "HeVinciMockupBundle::mockup/competency/learn-obj-start.html.twig" %}

{% block modal %}
    {% embed "HeVinciMockupBundle::library/claroline/modal.html.twig" %}
        {% block title %}Créer un objectif d'apprentissage{% endblock %}
        {% block body %}
            <form action="#" method="POST">
                <div>
                    <div class="form-group row">
                        <label class="control-label col-md-3 required" for="competence_form_name">
                            Nom
                        </label>
                        <div class="col-md-9">
                            <input type="text"
                                   id="competence_form_name" name="competence_form[name]"
                                   value="Améliorer ses compétences en lecture"
                                   required="required" class="form-control"
                                   autofocus
                                   onfocus="this.value = this.value;"
                                    />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-3 required" for="competence_form_score">
                            Référentiel associé
                        </label>
                        <div class="col-md-9">
                            <select class="form-control">
                                <option>Mathématiques</option>
                                <option>Biologie</option>
                                <option>Géoographie</option>
                                <option selected>Palef</option>
                                <option>Cecr</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-3 required" for="competence_form_score">
                            Niveau attendu par défaut
                        </label>
                        <div class="col-md-9">
                            <select class="form-control">
                                <option>A1a</option>
                                <option>A1b</option>
                                <option>A1c</option>
                                <option>A2a</option>
                                <option>A2b</option>
                                <option>A2c</option>
                                <option selected>B1a</option>
                                <option>B1b</option>
                                <option>B1c</option>
                                <option>B2a</option>
                                <option>B2b</option>
                                <option>B2c</option>
                                <option>C1a</option>
                                <option>C1b</option>
                                <option>C1c</option>
                            </select>
                        </div>
                    </div>
                </div>
            </form>
        {% endblock %}
    {% endembed %}
{% endblock %}